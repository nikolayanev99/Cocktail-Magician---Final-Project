@model CreateCocktailViewModel


<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-area="Admin" asp-controller="Cocktails" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.CocktailViewModel.Name" class="control-label"></label>
                <input asp-for="@Model.CocktailViewModel.Name" class="form-control" />
                <span asp-validation-for="@Model.CocktailViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CocktailViewModel.ShortDescription" class="control-label"></label>
                <input asp-for="@Model.CocktailViewModel.ShortDescription" class="form-control" />
                <span asp-validation-for="@Model.CocktailViewModel.ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CocktailViewModel.LongDescription" class="control-label"></label>
                <input asp-for="@Model.CocktailViewModel.LongDescription" class="form-control" />
                <span asp-validation-for="@Model.CocktailViewModel.LongDescription" class="text-danger"></span>
            </div>
            <h4>Select ingredients</h4>
            @Html.ListBoxFor(model => model.CocktailViewModel.Ingredients, Model.AllIngredients)
            <div class=" form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose file..</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        });
    });
    </script>
}