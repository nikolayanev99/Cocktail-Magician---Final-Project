@model CocktailMagician.Web.Models.BarViewModel

@{
    ViewData["Title"] = "AvailableCocktails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .cocktails{
            font-size:20px;
        }
        .box{
            text-indent:10px;
            line-height:1px;
        }
    </style>
</head>


<h1>Available Cocktails for @Model.Name</h1>
<form asp-area="Admin" asp-controller="AddCocktailToBar" asp-action="UpdateAvailableCocktails">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <table>
            @for (int i = 0; i < Model.SelectedCocktails.Count; i++)
            {
                <tr>
                    <td class="cocktails">
                        @Html.HiddenFor(x => Model.SelectedCocktails[i].Id)
                        @Html.DisplayFor(it => Model.SelectedCocktails[i].Title)
                    </td>
                    <td class="box">
                        @Html.CheckBoxFor(it => Model.SelectedCocktails[i].isChecked, new { Style = "vertical-align:3px}" })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
</form>