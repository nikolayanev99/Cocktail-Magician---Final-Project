@model cloudscribe.Pagination.Models.PagedResult<BarViewModel>
@{
    ViewData["Controller"] = "Bars";
    ViewData["Action"] = "Search";
}



<div class="col-12">
    <table class="table table-striped border">


        @foreach (var item in Model.Data)
        {
            <tr>
                <td><a asp-controller="Bars" asp-action="Details" asp-route-id="@item.Id"><img src="/images/@item.PhotoPath" width="220" height="160" /></a></td>
                <td>
                    <b>Name: </b>@Html.DisplayFor(m => item.Name)<br />
                    @*<b>Comments</b>(@Html.DisplayFor(m => item.Comments.Count))<br />*@
                    <b>Rating: </b>@Html.DisplayFor(m => item.AverageRating)<br />
                </td>
                <td>
                    <b>Adress: </b><br />
                        <span>&#8211;</span> @Html.DisplayFor(m => item.Address)<br />
                </td>
            </tr>
        }
    </table>
</div>
<partial name="_PeginationPartial" view-data="ViewData" model="Model" />